<div class="contact-page page">
    <main id="maincontent">
        <div class="hero">
            <div class="boxed">
                <h1 data-id="title"></h1>
                <p data-id="tagline"></p>
            </div>
        </div>
        {{{strips}}}
        <div class="boxed">
            <div class="col">
                <form action="/api/mail/send_mail/" method="post" class="form">
                    <input type="hidden" name="csrfmiddlewaretoken" />
                    <div class="labeled-control">
                        What is your question about?
                        <select>
                            {{#each options}}
                                <option>{{this}}</option>
                            {{/each}}
                        </select>
                        <input name="to_address" type="hidden" />
                        <input name="subject" type="hidden" />
                    </div>
                    <div class="labeled-control">
                        Your Name
                        <input name="from_name" type="text" required />
                    </div>
                    <div class="labeled-control">
                        Your Email Address
                        <input name="from_address" pattern="[^@]+@([^@\.]+\.)+[^@\.]+" type="text" required />
                    </div>
                    <div class="labeled-control">
                        Your Message
                        <textarea cols="50" name="message_body" rows="6" required></textarea>
                    </div>
                    <button class="btn btn-orange" type="submit">Send</button>
                </form>
            </div>
            <div class="col">
                <h2 data-id="mailing_header"></h2>
                <address data-id="mailing_address"></address>
                <p class="phone"><span class="label">Main: </span><span data-id="phone_number"></span></p>
            </div>
        </div>
    </main>
</div>
